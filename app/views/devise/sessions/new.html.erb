<div id="login">
  <div id="left"></div>
  <div id="center">
    <div id="login-form">
      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
        <div class="field">
          <input type="email" name="usuario[email]" placeholder="Email" autofocus="autofocus">
        </div>

        <div class="field">
          <input type="password" name="usuario[password]" placeholder="Senha">
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
  <div id="right"></div>
</div>
