<div id="minhas-compras">
	<div id="left"></div>
	<div id="center">
		<div id="pedidos-header">
			<div id="pedidos-titulo">
				Minhas compras
			</div>
		</div>
		<div id="lista-pedidos">
			<div id="lista-pedidos-header">
				<div class="lista-pedidos-header-item"></div>
				<div class="lista-pedidos-header-item" id="produto-nome-header">Nome</div>
				<div class="lista-pedidos-header-item">Pre√ßo</div>
				<div class="lista-pedidos-header-item">Quantidade</div>
				<div class="lista-pedidos-header-item">Total</div>
				<div class="lista-pedidos-header-item" id="produto-data-header">Data</div>
			</div>
			<% @pedidos.each do |pedido| %>
			<div class="pedido">
				<div class="pedido-icone-container">
					<img class="pedido-icone" src="<%= asset_path(pedido.icone_path) %>">
				</div>
				<p class="pedido-nome"><%= pedido.nome %> </p>
				<p class="pedido-preco">R$ <%= pedido.preco %> </p>
				<p class="pedido-quantidade"><%= pedido.quantidade %> </p>
				<p class="pedido-total">R$ <%= pedido.preco * pedido.quantidade %> </p>
				<p class="pedido-data"><%= pedido.created_at %></p>
				<div class="pedido-controles">
					<button class="pedido-controles-button"></button>
				</div>
			</div>
			<% end %>
		</div>
	</div>
	<div id="right"></div>
</div>