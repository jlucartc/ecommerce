<% if flash[:danger].present? %>
	<h2 id="danger"><%= flash[:danger] %></h2>
<% end%>

<% if flash[:success].present? %>
	<h2 id="success"><%= flash[:success] %></h2>
<% end%>

<h2>Produtos comprados</h2>

<% @pedidos.each do |pedido| %>
	<p>Produto: <%= pedido.nome %> </p>
	<p>Preco: <%= pedido.nome %> </p>
	<p>Quantidade: <%= pedido.quantidade %> </p>
	<p>Total: <%= pedido.preco * pedido.quantidade %> </p>
<% end %>