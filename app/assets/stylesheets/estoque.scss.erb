#estoque{
	display: grid;
	grid-template-columns: 1fr 3fr 1fr;
	font-family: helvetica;

	#left{}
	
	#center{

		padding: 0px 0px 30px 0px;

		#controles{
			display: grid;
			grid-template-columns: repeat(9,120px);
			gap: 10px;
			margin: 30px 0px 10px 0px;

			#estoque-header{
				display: flex;
				flex-direction: column;
				align-items: center;
				justify-content: center;
				font-size: 1.5em;
				font-weight: bold;
				margin: 0px 20px 0px 0px;
			}

			#criar-produto{
				width: 100%;
				grid-column: 9;
				text-decoration: none;
				color: inherit;
				padding: 10px 10px 10px 10px;
				margin: 10px 0px 10px 0px;
				background-color: #dddddd;
				box-shadow: 1px 1px 2px 0px #999999;
				text-align: center;

				&:hover{
					background-color: #999999;
					color: #ffffff;
					box-shadow: none;
				}

			}
		}
		#lista-produtos{

			display: flex;
			flex-direction: column;
			align-items: start;
			justify-content: center;

			#lista-produtos-header{
				background-color: #dddddd;
				display: grid;
				grid-template-columns: repeat(11,100px);
				gap: 10px;
				border-radius: 5px;

				.lista-produtos-header-item{
					padding: 10px 0px 10px 0px;
					text-align: center;
					font-weight: bold;
				}
			}

			.produto{
				margin: 20px 0px 0px 0px;
				display: grid;
				grid-template-columns: repeat(11,100px);
				grid-template-rows: 100px;
				gap: 10px;
				background-color: #dddddd;
				box-shadow: 1px 1px 2px 0px #999999;
				border-radius: 5px;
				border: 1px solid #cccccc;
				
				.produto-icone-container{
					.produto-imagem{
						aspect-ratio: 1;
						max-width: 100%;
					}
				}

				.produto-nome{
					text-align: center;
					//margin: 10px 0px 0px 0px;
				}
				
				.produto-preco{
					text-align: center;
					//margin: 10px 0px 0px 0px;
				}
				
				.produto-quantidade{
					text-align: center;
				}

				.produto-controles{
					position: relative;
					grid-column: 11;

					.produto-dropdown{
						position: absolute;
						width: 250px;
						top: 30px;
						right: 0px;
						background-color: #cccccc;
						z-index: 1;
						display: grid;
						grid-template-columns: 1fr;
						gap: 10px;
						padding: 10px 10px 10px 10px;
						border-radius: 5px;
						box-shadow: 1px 1px 2px 0px #999999;

						.dropdown-form{
							display: flex;
							flex-direction: row;
							align-items: center;
							justify-content: center;

							.diminui-quantidade-estoque{
								padding: 5px 10px 5px 10px;
								border-top-left-radius: 5px;
								border-bottom-left-radius: 5px;
								background-color: #eeeeee;
								border: none;

								&:hover{
									background-color: #555555;
									color: #ffffff;
								}
							}

							.quantidade-estoque{
								padding: 5px 10px 5px 10px;
								background-color: #eeeeee;
								border: none;
							}

							.aumenta-quantidade-estoque{
								padding: 5px 10px 5px 10px;
								border-top-right-radius: 5px;
								border-bottom-right-radius: 5px;
								background-color: #eeeeee;
								border: none;

								&:hover{
									background-color: #555555;
									color: #ffffff;
								}
							}

						}

						.estoque-dropdown-confirm-button{
							width: 100%;
							border: none;
							background-color: #999999;
							border-radius: 5px;
							box-shadow: 1px 1px 2px 0px #999999;
							padding: 5px 0px 5px 0px;

							&:hover{
								background-color: #555555;
								color: #ffffff;
							}
						}

					}

					.produto-dropdown-button{
						width: 30px;
						height: 30px;
						position: absolute;
						top: 0px;
						right: 0px;
						border: none;
						background-size: cover;
						background-image: url("<%= asset_path('menu_normal')%>");

						&:hover{
							background-image: url("<%= asset_path('menu_hover') %>");
						}
					}

				}
			}
		}

		#lista-vazia{
			text-align: center;
			background-color: #eeeeee;
		}
	}
	
	#right{}

}